{% extends 'base.html.twig' %}


{% block title %}Informations Compte{% endblock %}

{% block body %}

  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="{{ asset('assets/css/style_main.css') }}">
<style>
 .example-wrapper {
    margin: 1em auto;
    max-width: 800px;
    width: 35%;
    font: 18px/1.5 sans-serif;
    box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px;
    background-color: rgba(212, 212, 212, 0.8);
    color: black;
    border-radius: 10px;
}

.example-wrapper code {
    background: #F5F5F5;
    padding: 2px 6px;
}

.header_W2hzl {
    display: flex;
    border-bottom: 1px solid black;
    width: 100%;
    z-index: 99;
}

.album-info {
    text-align: center;
}

.tracklist {
    text-align: center;
}

.table {
    width: 100%;
}

.table th,
.table td {
    padding: 8px;
}

.table th {
    background-color: #007bff;
    color: #fff;
}


</style>


<div class="example-wrapper">
  
  <div class="album-info">
      <h2>Information Album</h2>
      {% if app.user and existingAlbum == null %}
      <a class="btn_create" href="{{ path('create_album', {'type':type,'id':album.id}) }}"><span>‚òÜ Ajouter √† ma liste</span></a>
      {% elseif app.user and existingAlbum != null %}
      <a class="btn_delete" href="{{ path('delete_album', {'type':type,'id':existingAlbum.id, 'discogsId':album.id }) }}"><span>üóëÔ∏è Supprimer de ma liste</span></a>
      {% endif %}
      {% if app.user == false %}
        <a class="btn" href="/login"> Connecter vous pour Ajouter un album √† votre liste </a>
      {% endif %}

      <header class="header_W2hzl"><h2></h2><span></span></header>
      <p>Titre : {{album.title}}</p>
  </div>

  <div class="tracklist">
      <h3>TrackList</h3>
      <header class="header_W2hzl"><h2></h2><span></span></header>
      <table class="table">
          <thead>
              <tr>
                  <th scope="col">Titre</th>
                  <th scope="col">dur√©e</th>
              </tr>
          </thead>
          <tbody>
              {% for key,time in duration %}
                  <tr>
                      <th scope="row">{{title[key]}}</th>
                      <td>{{time}}</td>
                  </tr>
              {% endfor %}
          </tbody>
      </table>
  </div>
</div>
{% endblock %}