{% extends 'base.html.twig' %}


{% block title %}Informations Compte{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 35%; font: 18px/1.5 sans-serif;         
    box-shadow: rgba(0, 0, 0, 0.12) 0px 1px 3px, rgba(0, 0, 0, 0.24) 0px 1px 2px;
    background-color:black;
    color:white;
    border-radius: 10px;
    }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }

    .header_W2hzl {
        display: -webkit-box;
        display: -webkit-flex;
        display: -moz-box;
        display: flex;
        border-bottom: 1px solid #e5e5e5;
        width: 100%;
        z-index: 99;

}


</style>

<div class="example-wrapper">
  
  <h2>Information Album</h2>
  <header class="header_W2hzl"><h2></h2><span></span></header>


<form id="searchForm" class="form-inline ms-auto" action="{{ path('create_album', {'name': album.title, 'country': album.country, 'date': album.released, 'url': album.thumb}) }}">
    <button class="btn btn-outline-success" type="submit">Ajouter Album à la liste</button>
</form>


  <p>  Titre : {{album.title}}  </p>


  //date year
  //image image[array] uri
  //country

  <h3>TrackList</h3>
  <header class="header_W2hzl"><h2></h2><span></span></header>

      <table class="table">
  <thead>
      <tr>
      <th scope="col">Titre</th>
      <th scope="col">durée</th>
      </tr>
  </thead>
  <tbody>
      <tr>
      {% for key,time in duration %}
        <th scope="row">{{title[key]}}</th>
        <td>{{time}}</td>
        </tr>
      {% endfor %}
  </tbody>
  </table>


  </div>
</div>
{% endblock %}
