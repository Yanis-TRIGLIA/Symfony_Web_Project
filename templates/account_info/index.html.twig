{% extends 'base.html.twig' %}

{% block title %}Informations Compte{% endblock %}

{% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-xl-6">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25">
                                    <img src="https://cdn-icons-png.flaticon.com/256/5036/5036365.png" width="100" height="auto" alt="User-Profile-Image">
                                </div>
                                <h6 class="f-w-600">{{ app.user.name }}</h6>
                                <p>Fan de Musique</p>
                                <a href="#" class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></a>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Informations</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400">{{ app.user.email }}</h6>
                                    </div>
                                </div>
                                <div class="row mt-4">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
