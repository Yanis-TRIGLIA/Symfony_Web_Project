{% extends 'base.html.twig' %}

{% block title %}Informations Compte{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<link rel="stylesheet" href="{{ asset('assets/css/style_account_info.css') }}">
{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center mt-5 mb-4">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 bg-primary text-white text-center py-4">
                            <img src="https://cdn-icons-png.flaticon.com/256/5036/5036365.png" class="img-fluid rounded-circle" alt="User-Profile-Image">
                            <h4 class="mt-2">{{ app.user.name }}</h4>
                            <p class="text-muted">Fan de Musique</p>
                        </div>
                        <div class="col-md-8">
                            <h4 class="pb-3 mb-4 border-bottom">Informations</h4>
                            <div class="row">
                                <div class="col-sm-4">
                                    <p class="font-weight-bold mb-1">Email:</p>
                                </div>
                                <div class="col-sm-8">
                                    <p class="text-muted">{{ app.user.email }}</p>
                                </div>
                            </div>
                            <!-- Ajoutez d'autres informations ici -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
{% endblock %}
